export DIST_NAME=LibrePhotosOS
export DIST_VERSION=0.1.0
export BASE_DISTRO=ubuntu
export BASE_ARCH=aarch64

# rpi-imager json generator settings
export RPI_IMAGER_NAME="${DIST_NAME}"
export RPI_IMAGER_DESCRIPTION="A self-hosted open source photo management service. Including Face recognition, semantic image search and more"
export RPI_IMAGER_WEBSITE="https://github.com/guysoft/CustomPiOS"
export RPI_IMAGER_ICON="https://raw.githubusercontent.com/guysoft/CustomPiOS/devel/media/rpi-imager-CustomPiOS.png"

export MODULES="base(network,disable-services(docker, librephotosos, auto-mount-removable, usage-statistics))"

# if set will enlarge root parition prior to build by provided size in MB
export BASE_IMAGE_ENLARGEROOT=2000

# if set will resize root partition on image after build to minimum size +
# provided size in MB
export BASE_IMAGE_RESIZEROOT=200


export USAGE_STATISTICS_URL=https://librephotosos-tracking.gnethomelinux.com

